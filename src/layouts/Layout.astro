---
import Icon from '../components/Icon.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Blog de idiomas - Aprende con contenido de calidad" } = Astro.props;

// Importar base path
import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Generator meta removed for security -->
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    
    <title>{title}</title>
    <style>
      :root {
        /* Paleta de colores revolucionaria */
        --color-revolutionary-red: #DC2626;
        --color-revolutionary-red-dark: #B91C1C;
        --color-revolutionary-red-light: #FEE2E2;
        --color-socialist-gold: #F59E0B;
        --color-socialist-gold-dark: #D97706;
        --color-socialist-gold-light: #FEF3C7;
        --color-charcoal: #1F2937;
        --color-charcoal-light: #374151;
        --color-charcoal-lighter: #6B7280;
        --color-paper: #FEFEFE;
        --color-paper-warm: #FEF7ED;
        --color-text-primary: #111827;
        --color-text-secondary: #6B7280;
        --color-text-muted: #9CA3AF;
        --color-border: #E5E7EB;
        --color-border-light: #F3F4F6;
        
        /* Tipografía */
        --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        --font-mono: 'JetBrains Mono', 'Fira Code', Consolas, monospace;
        
        /* Espaciado consistente */
        --space-xs: 0.25rem;
        --space-sm: 0.5rem;
        --space-md: 1rem;
        --space-lg: 1.5rem;
        --space-xl: 2rem;
        --space-2xl: 3rem;
        --space-3xl: 4rem;
        
        /* Radios */
        --radius-sm: 0.375rem;
        --radius-md: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
        
        /* Sombras */
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        font-size: 16px;
        scroll-behavior: smooth;
      }
      
      body {
        font-family: var(--font-primary);
        line-height: 1.6;
        color: var(--color-text-primary);
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        font-weight: 400;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      /* Tipografía mejorada */
      h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-primary);
        font-weight: 700;
        line-height: 1.2;
        color: var(--color-text-primary);
        margin-bottom: var(--space-lg);
      }
      
      h1 {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 800;
        letter-spacing: -0.02em;
      }
      
      h2 {
        font-size: clamp(1.5rem, 4vw, 2.25rem);
        font-weight: 700;
        letter-spacing: -0.01em;
      }
      
      h3 {
        font-size: clamp(1.25rem, 3vw, 1.875rem);
        font-weight: 600;
      }
      
      h4 {
        font-size: clamp(1.125rem, 2.5vw, 1.5rem);
        font-weight: 600;
      }
      
      p {
        line-height: 1.7;
        color: var(--color-text-secondary);
        margin-bottom: var(--space-md);
      }
      
      code, pre {
        font-family: var(--font-mono);
        font-size: 0.875rem;
      }
      
      /* Layout mejorado */
      .container {
        max-width: 1600px;
        width: 85%;
        margin: 0 auto;
        padding: 0 var(--space-xl);
      }
      
      @media (max-width: 1024px) {
        .container {
          width: 90%;
          padding: 0 var(--space-lg);
        }
      }
      
      @media (max-width: 768px) {
        .container {
          width: 95%;
          padding: 0 var(--space-md);
        }
      }
      
      /* Header rediseñado */
      header {
        background: var(--color-paper);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--color-border-light);
        box-shadow: var(--shadow-sm);
        position: sticky;
        top: 0;
        z-index: 50;
        margin-bottom: var(--space-2xl);
      }
      
      nav {
        padding: var(--space-lg) 0;
        display: flex;
        align-items: center;
        gap: var(--space-2xl);
      }
      
      nav a {
        text-decoration: none;
        color: var(--color-revolutionary-red);
        font-weight: 500;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        padding: var(--space-sm) var(--space-md);
        border-radius: var(--radius-md);
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
      }
      
      nav a:hover {
        color: var(--color-revolutionary-red-dark);
        background: var(--color-revolutionary-red-light);
        transform: translateY(-1px);
      }
      
      nav a .icon {
        color: inherit;
        transition: transform 0.2s ease;
      }
      
      nav a:hover .icon {
        transform: scale(1.1);
      }
      
      /* Main content mejorado */
      main {
        background: var(--color-paper);
        padding: var(--space-2xl);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
        border: 1px solid var(--color-border-light);
        margin-bottom: var(--space-2xl);
        min-height: 60vh;
        overflow-x: auto; /* Para tablas anchas */
      }
      
      @media (max-width: 768px) {
        main {
          padding: var(--space-xl);
          border-radius: var(--radius-lg);
        }
      }
      
      /* Footer mejorado */
      footer {
        text-align: center;
        padding: var(--space-2xl) 0;
        color: var(--color-text-muted);
        font-size: 0.9rem;
        border-top: 1px solid var(--color-border-light);
        background: var(--color-paper);
      }
      
      /* Utilidades de diseño */
      .text-revolutionary { color: var(--color-revolutionary-red) !important; }
      .text-socialist { color: var(--color-socialist-gold) !important; }
      .text-charcoal { color: var(--color-charcoal) !important; }
      .bg-revolutionary { background-color: var(--color-revolutionary-red) !important; }
      .bg-socialist { background-color: var(--color-socialist-gold) !important; }
      .border-revolutionary { border-color: var(--color-revolutionary-red) !important; }
      
      /* Cards y componentes */
      .card {
        background: var(--color-paper);
        border-radius: var(--radius-lg);
        border: 1px solid var(--color-border);
        box-shadow: var(--shadow-sm);
        padding: var(--space-xl);
        transition: all 0.2s ease;
      }
      
      .card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
        border-color: var(--color-revolutionary-red-light);
      }
      
      .btn {
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        padding: var(--space-md) var(--space-xl);
        border-radius: var(--radius-md);
        font-family: var(--font-primary);
        font-weight: 500;
        font-size: 0.95rem;
        text-decoration: none;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        border: none;
        cursor: pointer;
      }
      
      .btn-primary {
        background: var(--color-revolutionary-red);
        color: white;
      }
      
      .btn-primary:hover {
        background: var(--color-revolutionary-red-dark);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
      }
      
      .btn-secondary {
        background: var(--color-socialist-gold);
        color: var(--color-charcoal);
      }
      
      .btn-secondary:hover {
        background: var(--color-socialist-gold-dark);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
      }
      
      /* Control de tamaño de fuente */
      .font-control {
        position: fixed;
        top: 50%;
        right: var(--space-md);
        transform: translateY(-50%);
        z-index: 100;
        background: var(--color-paper);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        padding: var(--space-sm);
        display: flex;
        flex-direction: column;
        gap: var(--space-xs);
      }
      
      .font-control button {
        background: var(--color-revolutionary-red);
        color: white;
        border: none;
        border-radius: var(--radius-md);
        padding: var(--space-sm);
        cursor: pointer;
        font-weight: 600;
        font-size: 0.75rem;
        transition: all 0.2s ease;
        min-width: 32px;
        min-height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .font-control button:hover {
        background: var(--color-revolutionary-red-dark);
        transform: scale(1.05);
      }
      
      /* Estilos para tablas responsivas */
      .table-container {
        overflow-x: auto;
        margin: var(--space-lg) 0;
        border-radius: var(--radius-md);
        border: 1px solid var(--color-border);
      }
      
      table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
        background: var(--color-paper);
      }
      
      th, td {
        padding: var(--space-md) var(--space-sm);
        text-align: left;
        border-bottom: 1px solid var(--color-border-light);
        vertical-align: top;
      }
      
      th {
        background: var(--color-revolutionary-red-light);
        font-weight: 600;
        color: var(--color-charcoal);
        position: sticky;
        top: 0;
        z-index: 10;
      }
      
      tbody tr:hover {
        background: var(--color-paper-warm);
      }
      
      /* Tablas especiales de gramática */
      .grammar-table th {
        background: var(--color-socialist-gold-light);
      }
      
      .vocab-table th {
        background: linear-gradient(135deg, var(--color-revolutionary-red-light), var(--color-socialist-gold-light));
      }
      
      /* Clases de tamaño de fuente */
      .font-size-small { font-size: 0.9rem !important; }
      .font-size-normal { font-size: 1rem !important; }
      .font-size-large { font-size: 1.1rem !important; }
      .font-size-xlarge { font-size: 1.2rem !important; }
      
      .font-size-small h1 { font-size: clamp(1.8rem, 4.5vw, 2.7rem) !important; }
      .font-size-large h1 { font-size: clamp(2.2rem, 5.5vw, 3.3rem) !important; }
      .font-size-xlarge h1 { font-size: clamp(2.4rem, 6vw, 3.6rem) !important; }
      
      .font-size-small h2 { font-size: clamp(1.35rem, 3.6vw, 2.025rem) !important; }
      .font-size-large h2 { font-size: clamp(1.65rem, 4.4vw, 2.475rem) !important; }
      .font-size-xlarge h2 { font-size: clamp(1.8rem, 4.8vw, 2.7rem) !important; }
      
      .font-size-small h3 { font-size: clamp(1.125rem, 2.7vw, 1.6875rem) !important; }
      .font-size-large h3 { font-size: clamp(1.375rem, 3.3vw, 2.0625rem) !important; }
      .font-size-xlarge h3 { font-size: clamp(1.5rem, 3.6vw, 2.25rem) !important; }
    </style>
  </head>
  <body>
    <!-- Control de tamaño de fuente -->
    <div class="font-control">
      <button onclick="changeFontSize('small')" title="Fuente pequeña">
        A-
      </button>
      <button onclick="changeFontSize('normal')" title="Fuente normal">
        A
      </button>
      <button onclick="changeFontSize('large')" title="Fuente grande">
        A+
      </button>
      <button onclick="changeFontSize('xlarge')" title="Fuente extra grande">
        A++
      </button>
    </div>
    <header>
      <div class="container">
        <nav>
          <a href={import.meta.env.BASE_URL}>
            <Icon name="home" size={20} />
            Inicio
          </a>
          <a href={`${import.meta.env.BASE_URL}blog/`}>
            <Icon name="book-open" size={20} />
            Lecciones
          </a>
          <a href={`${import.meta.env.BASE_URL}idiomas/`}>
            <Icon name="globe" size={20} />
            Idiomas
          </a>
          <a href={`${import.meta.env.BASE_URL}canciones/`}>
            <Icon name="music" size={20} />
            Canciones
          </a>
          <a href={`${import.meta.env.BASE_URL}about/`}>
            <Icon name="info" size={20} />
            Acerca de
          </a>
        </nav>
      </div>
    </header>
    
    <div class="container">
      <main>
        <slot />
      </main>
      
      <footer>
        <p>&copy; 2024 Blog de Idiomas. Hecho con Astro.</p>
      </footer>
    </div>
    
    <script>
      // Control de tamaño de fuente
      function changeFontSize(size) {
        const body = document.body;
        const classes = ['font-size-small', 'font-size-normal', 'font-size-large', 'font-size-xlarge'];
        
        // Remover clases existentes
        classes.forEach(cls => body.classList.remove(cls));
        
        // Agregar nueva clase
        body.classList.add(`font-size-${size}`);
        
        // Guardar preferencia
        localStorage.setItem('fontSize', size);
      }
      
      // Cargar preferencia al iniciar
      document.addEventListener('DOMContentLoaded', function() {
        const savedSize = localStorage.getItem('fontSize') || 'normal';
        changeFontSize(savedSize);
      });
    </script>
  </body>
</html>