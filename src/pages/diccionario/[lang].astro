  function renderWordCards(words) {
    return words.map(([word, data]) => `
      <div class="word-card" data-word="${word.toLowerCase()}">
        <h3 class="word-title">${word}</h3>
        <div class="word-meaning">
          <span class="meaning-label">Significado:</span>
