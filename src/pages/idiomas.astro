  ...languages[code],
  count: posts.length,
  posts: posts.sort((a, b) => (a.data.day || 999) - (b.data.day || 999))
})).sort((a, b) => b.count - a.count);

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Inicio', href: import.meta.env.BASE_URL, icon: 'home' },
  { label: 'Idiomas', icon: 'globe' }
];
