  // Función para obtener pinyin de un carácter desde el diccionario
  function getCharacterPinyin(character) {
    if (!dictionaryData || !dictionaryData.words) return "";
    
    // Buscar en todas las palabras del diccionario
    for (const [word, data] of Object.entries(dictionaryData.words)) {
      if (data.entries) {
        for (const entry of data.entries) {
          if (entry.allTranslations?.zh?.includes(character)) {
            const zhText = entry.allTranslations.zh;
            const pinyinText = entry.allTranslations.zhPinyin;
            
            if (zhText && pinyinText) {
              const charIndex = zhText.indexOf(character);
              if (charIndex !== -1) {
                // Intentar extraer el pinyin correspondiente
                const pinyinParts = pinyinText.split(/\s+/);
                if (pinyinParts[charIndex]) {
                  return pinyinParts[charIndex];
                }
                // Si no se puede mapear exactamente, devolver el primer pinyin
                return pinyinParts[0] || "";
              }
            }
          }
        }
